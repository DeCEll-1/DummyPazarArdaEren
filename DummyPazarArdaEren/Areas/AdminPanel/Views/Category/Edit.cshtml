@model DummyPazarArdaEren.Models.Categories
@{
    ViewBag.Title = "DP Kategori Düzenle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="form">
    <div class="formtitle">
        <h3>Kategori Düzenleme Ekranı</h3>
    </div>
    <div class="formcontent">

        @if (ViewBag.Mesaj != null)
        {
            <div>
                @ViewBag.Mesaj
            </div>
        }


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            @Html.HiddenFor(model => model.ID)
            <div>
                @Html.LabelFor(model => model.Name):
                <br />
                @Html.EditorFor(model => model.Name)
                <br />
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div>
                @Html.LabelFor(model => model.Description):
                <br />
                @Html.EditorFor(model => model.Description)
                <br />
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div>
                    <input type="submit" value="Kategori Düzenle" />
            </div>
        }

    </div>
</div>
