@using DummyPazarArdaEren.Models
@model IEnumerable<DummyPazarArdaEren.Models.Categories>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="pagetitle" >
    <h3>Kategoriler <small>Kayıtlı Tüm Kategoriler Listesi</small></h3>
</div>

<div class="tablecontainer">
    <table cellpadding="0" cellspacing="0" class="liste">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Seçenekler</th>
        </tr>

        @foreach (Categories item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    @if (item.Description.Length >= 50)
                    {
                        @item.Description.Substring(0, 50);
                        <label>...</label>
                    }
                    else
                    {
                        @item.Description;
                    }
                </td>
                <td>
                    <div style="width: 50%; float: left;">
                        <a href="@Url.Action("Edit","Category",new {id = item.ID})">Düzenle</a>
                    </div>
                    <div style="width: 50%; float: right;">
                        <a href="@Url.Action("Delete", "Category", new {id=item.ID})">Sil</a>
                    </div>
                </td>

            </tr>
        }

    </table>
</div>
