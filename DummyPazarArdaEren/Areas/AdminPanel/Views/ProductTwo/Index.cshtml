@using DummyPazarArdaEren.Models
@model IEnumerable<DummyPazarArdaEren.Models.Product>
@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div class="pagetitle">
    <h3>Ürünler <small>Kayıtlı Tüm Ürünlerin Listesi</small></h3>
</div>

<div class="tablecontainer">
    <table cellpadding="0" cellspacing="0" class="liste">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.ImageBigPath)</th>
            <th>@Html.DisplayNameFor(model => model.ImageIconPath)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>Seçenekler</th>
        </tr>
        @foreach (Product item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                @*Description*@
                <td>

                    @if (item.Description.Length >= 50)
                    {
                        @item.Description.Substring(0, 50);
                        <label>...</label>
                    }
                    else
                    {
                        @item.Description;
                    }
                </td>
                <td>@item.Price</td>
                <td><img src="~/Assets/ProductImages/ImageBig/@item.ImageBigPath" alt="Fotoğraf Alımında Bir Hata Oluştu" /></td>
                <td>@item.IsActive</td>
                <td>
                    <div style="width:50%; float:left;">
                        <a href="@Url.Action("Edit","ProductTwo",new {item.ID})">Düzenle</a>
                    </div>
                    <div style="width: 50%; float: right;">
                        <a href="@Url.Action("Delete","ProductTwo",new {item.ID})">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>